<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Switch
            android:id="@+id/switchsvpressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/csvBoxPres"
            android:padding="10sp"
            android:text="@string/save_btn"
            android:textSize="20sp" />

        <TextView
                android:id="@+id/spinnerLabelPressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:text="@string/label_sample_freq_spinner"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinnerSampleFreqPressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/spinnerLabelPressure"
                android:layout_toEndOf="@id/spinnerLabelPressure"/>


        <Button
            android:id="@+id/bStartStopPressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/switchsvpressure"
            android:drawableStart="@drawable/ic_play_arrow"
            android:drawableLeft="@drawable/ic_play_arrow"
            android:text="@string/start_listening_btn"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/valPressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:textSize="20sp"
            android:layout_below="@id/bStartStopPressure"/>

        <TextView
            android:id="@+id/detailsPressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/valPressure"
            android:padding="10sp"
            android:textSize="20sp"
            android:layout_marginTop="10sp" />

        <CheckBox
            android:id="@+id/csvBoxPres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnerLabelPressure"
            android:text="@string/local_storage_checkbox"
            android:textSize="20sp"
            android:padding="10sp" />

    </RelativeLayout>
</ScrollView>
