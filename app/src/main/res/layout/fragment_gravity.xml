<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <TextView
                android:id="@+id/spinnerLabelGravity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:text="@string/label_sample_freq_spinner"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinnerSampleFreqGravity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/spinnerLabelGravity"
                android:layout_toEndOf="@id/spinnerLabelGravity"/>


        <Button
            android:id="@+id/bStartStopGravity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/csvBoxGrav"
            android:drawableLeft="@drawable/ic_play_arrow"
            android:drawableStart="@drawable/ic_play_arrow"
            android:text="@string/start_listening_btn"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/xValueGravity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:textSize="20sp"
            android:layout_below="@id/bStartStopGravity"/>

        <TextView
            android:id="@+id/yValueGravity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/xValueGravity"
            android:padding="10sp"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/zValueGravity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yValueGravity"
            android:padding="10sp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/detailsGravity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zValueGravity"
            android:padding="10sp"
            android:textSize="20sp"
            android:layout_marginTop="10sp" />

        <CheckBox
            android:id="@+id/csvBoxGrav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnerLabelGravity"
            android:text="@string/local_storage_checkbox"
            android:textSize="20sp"
            android:padding="10sp" />
    </RelativeLayout>
</ScrollView>
