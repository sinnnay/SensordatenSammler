<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graphLight"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:layout_below="@id/detailsLight" />

        <Switch
            android:id="@+id/switchsvlicht"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/csvBoxLight"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:padding="10sp"
            android:text="@string/save_btn"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/spinnerLabelLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="@string/label_sample_freq_spinner"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinnerSampleFreqLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/spinnerLabelLight"
            android:layout_toEndOf="@id/spinnerLabelLight"/>


        <Button
            android:id="@+id/bStartStopLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/switchsvlicht"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:drawableStart="@drawable/ic_play_arrow"
            android:drawableLeft="@drawable/ic_play_arrow"
            android:text="@string/start_listening_btn"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/valLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:textSize="20sp"
            android:layout_below="@id/bStartStopLight"/>

        <TextView
            android:id="@+id/detailsLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/valLight"
            android:padding="10sp"
            android:textSize="20sp"
            android:layout_marginTop="10sp" />

        <CheckBox
            android:id="@+id/csvBoxLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnerLabelLight"
            android:text="@string/local_storage_checkbox"
            android:textSize="20sp"
            android:padding="10sp" />

        <TextView
            android:id="@+id/tvSavedCsvFileLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/graphLight"
            android:padding="10sp"
            android:textSize="10sp"
            android:layout_marginTop="10sp" />
    </RelativeLayout>
</ScrollView>
