<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="180dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="70dp"
            android:text="Lokalisierung" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="40dp"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/spinner2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="180dp"
            android:layout_height="44dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Accelerometer" />

        <Switch
            android:id="@+id/switch2"
            android:layout_width="30dp"
            android:layout_height="44dp"
            android:layout_below="@+id/switch1"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/spinner3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="180dp"
            android:layout_height="44dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Gyroskop" />

        <Switch
            android:id="@+id/switch3"
            android:layout_width="113dp"
            android:layout_height="44dp"
            android:layout_below="@+id/switch2"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/textView" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="180dp"
            android:layout_height="44dp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Magnetometer" />

        <Switch
            android:id="@+id/switch4"
            android:layout_width="113dp"
            android:layout_height="44dp"
            android:layout_below="@+id/switch3"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@+id/textView" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="180dp"
            android:layout_height="44dp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Licht" />

        <Switch
            android:id="@+id/switch5"
            android:layout_width="113dp"
            android:layout_height="44dp"
            android:layout_below="@+id/switch4"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@+id/textView" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="180dp"
            android:layout_height="44dp"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Umgebungstemperatur" />

        <Switch
            android:id="@+id/switch6"
            android:layout_width="113dp"
            android:layout_height="44dp"
            android:layout_below="@+id/switch5"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@+id/textView" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="77dp"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@+id/textView"
            android:entries="@array/sampling_frequencies"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="77dp"
            android:layout_height="44dp"
            android:layout_below="@+id/spinner2"
            android:layout_marginStart="9dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/textView2"
            android:entries="@array/sampling_frequencies" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="39dp"
            android:fontFamily="sans-serif-thin"
            android:text="@string/sensor_list_title" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="79dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="35dp"
            android:layout_toEndOf="@+id/textView7"
            android:text="Frequenz" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="94dp"
            android:layout_height="33dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="36dp"
            android:layout_toEndOf="@+id/textView8"
            android:text="Speichern" />

    </RelativeLayout>
</ScrollView>